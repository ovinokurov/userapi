type User {
    id: ID!
    firstName: String!
    lastName: String!
}

type Query {
    users: [User!]!
    user(id: ID!): User
    userByName(firstName: String!, lastName: String!): User
    usersByFirstName(firstName: String!): [User!]!
    usersByLastName(lastName: String!): [User!]!
}

type Mutation {
    createUser(firstName: String!, lastName: String!): User!
    deleteUser(id: ID!): Boolean!
}
